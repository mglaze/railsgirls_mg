<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@idea.picture_url, :width => 400) if @idea.picture.present? %>
</p>

<p>
  <b>Twitter Hash:</b>
  <%= @idea.twitter_hash %>
</p>

<p>
  <b>Rating:</b>
  <%= @idea.rating %>
</p>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
