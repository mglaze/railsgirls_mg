<%= form_for(@idea, :html => { :multipart => true }) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
    <%= image_tag(@idea.picture_url, :width => 50) if @idea.picture.present? %>
  </div>
  <div class="field">
    <%= f.label :twitter_hash %><br />
    <%= f.text_area :twitter_hash %>
  </div>
  <div class="field">
    <%= f.label :rating, "Rate This Idea!" %><br />
    <%= f.text_field :rating %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
